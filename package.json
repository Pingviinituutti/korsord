{
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "scripts": {
    "format": "prettier --write **/*.{ts,tsx,js,jsx,css}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write"
    ]
  }
}
